extends layout
block body
    div.container-fluid.bg-secondary
         div.row
            div.col
                div.header.bg-danger
                    nav.d-flex.justify-content-center.align-items-center
                          ul.nav.justify-content-end.bg-danger
                            li.nav-item
                                a.nav-link(href="/" class=!categoryActive ? "active" : "" ).bg-green Acceuil
                             //each cat in categories
                                li.nav-item
                                    a.nav-link(href="/"+ cat.cat_id class=categoryActive && categoryActive.cat_id  === cat.cat_id ? "active" : "")=cat.cat_name
                            if(logged)
                                li.nav-item
                                    a.nav-link(href="/categories").bg-green Editer categories
                            if (logged)
                                li.nav-item
                                    a.nav-link(href="/post/create").bg-green Créer un nouveau post 
                            if(logged)
                                li.nav-item
                                    a.nav-link(href="/logout").bg-green Se deconnecter
                                    
                            if(!logged)
                                li.nav-item
                                    a.nav-link(href="/login").bg-green Se connecter
                            if(!logged)
                                li.nav-item
                                    a.nav-link(href="/signup") Créer un compte 
                            img(src='https://upload.wikimedia.org/wikipedia/fr/thumb/5/58/Reddit_logo_new.svg/1200px-Reddit_logo_new.svg.png' style="width:80px; height:40px" )
                           
       
       
        div.row
            div.col
                div.bg-light.p-5
                    if !logged
                         if errors
                              div.p-2.alert.alert-danger
                              h4=errors
                         form(method="POST" action="/signup")
                               div.p-2
                                  label(for="mail") mail 
                                        img(class="rounded img-fluid" src="https://upload.wikimedia.org/wikipedia/commons/0/05/Aiga_mail.png"  style="width:40px; height:40px" )
                                       input(type="text" id="mail" name="mail")
                                div.p-2
                                   label(for="username") Username
                                      img(class="rounded img-fluid" src="https://cdn.icon-icons.com/icons2/1769/PNG/512/4092564-about-mobile-ui-profile-ui-user-website_114033.png"  style="width:40px; height:40px" )
                                      input(type="text" id="username" name="username")
                              div.p-2
                                 label(for="password") Password
                                     img(class="rounded img-fluid" src="https://stickeramoi.com/3781-large_default/autocollant-cadenas-muraux.jpg"  style="width:40px; height:40px" )
                                     input(type="password" id="password" name="password")
                                div.p-2
                                    label(for="password_ver") Confirmation password
                                       img(class="rounded img-fluid" src="https://stickeramoi.com/3781-large_default/autocollant-cadenas-muraux.jpg"  style="width:40px; height:40px" )
                                       input(type="password" id="password_ver" name="password_ver")
                             div.flex.p-2
                                    form(method="POST" action="/signup")
                                        input(type="submit" value="Create account")
                     else
                           form(method="POST" action="/logout")
                               input(type="submit" value="Logout")
                            