extends layout
block body
     div.container-fluid.bg-secondary
        div.row
            div.col
                div.header.bg-danger
                    nav.d-flex.justify-content-center.align-items-center
                          ul.nav.nav-pills.justify-content-end.bg-danger
                            if(data.logged)
                                li.nav-item
                                    a.nav-link(href="/tendance") Tendance
                                li.nav-item
                                    a.nav-link(href="/categories") Editer categories
                                li.nav-item
                                    a.nav-link(href="/post/create" class="link-dark").bg-green Créer un nouveau post 
                                li.nav-item
                                    a.nav-link(href="/logout" class="link-dark").bg-green Se deconnecter
                                    
                            if(!data.logged)
                                li.nav-item
                                    a.nav-link(href="/login" class="link-dark") Se connecter
                                li.nav-item
                                    a.nav-link(href="/signup" class="link-dark") Créer un compte 
                            img(src='https://upload.wikimedia.org/wikipedia/fr/thumb/5/58/Reddit_logo_new.svg/1200px-Reddit_logo_new.svg.png' style="width:80px; height:40px" )
    
        div.row
            div.col
                div.bg-light.p-5
                    div.container
                        h1.text-center=categoryActive ? categoryActive.cat_name : "Profile"
        

        div.row
            div.col
                div.bg-light.p-5
                    if (data.logged)
                        if errors
                            div.p-2.alert.alert-danger
                                h4=errors
                        .p-2
                            p="Votre nom d'utilisateur est:" + data.username
                        .p-2 
                            p= "Votre adresse mail est:" + data.mail
                        .p-2 
                            h4= "Changer de mot de passe:" 
                        form(method="POST" action="/changemdp")
                            div.p-2
                                label(for="current_password") current_password
                                    input(type="password" id="current_password" name="current_password")
                            div.p-2
                                label(for="password") Password
                                    input(type="password" id="password" name="password")
                            div.p-2
                                label(for="password_ver") Vérification de mot de passe
                                    input(type="password" id="password_ver" name="password_ver")
                            div.flex.p-2
                                form(method="POST" action="/changemdp")
                                    input(type="submit" value="Changer de mot de passe")

