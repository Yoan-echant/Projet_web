extends layout 
block body
  div.container-fluid.bg-secondary
        div.row
            div.col
                div.header.bg-danger
                    nav.d-flex.justify-content-center.align-items-center
                          ul.nav.nav-pills.justify-content-end.bg-danger
                            li.nav-item
                                a.nav-link(href="/" class=!categoryActive ? "active" : "" ).bg-green Acceuil
                             //each cat in categories
                                li.nav-item
                                    a.nav-link(href="/"+ cat.cat_id class=categoryActive && categoryActive.cat_id  === cat.cat_id ? "active" : "")=cat.cat_name
                            if(logged)
                                li.nav-item
                                    a.nav-link(href="/categories").bg-green Editer categories
                            if (logged)
                                li.nav-item
                                    a.nav-link(href="/post/create").bg-green Créer un nouveau post 
                            if(logged)
                                li.nav-item
                                    a.nav-link(href="/logout").bg-green Se deconnecter
                                    
                            if(!logged)
                                li.nav-item
                                    a.nav-link(href="/login").bg-green Se connecter
                            if(!logged)
                                li.nav-item
                                    a.nav-link(href="/signup") Créer un compte 
                            img(src='https://upload.wikimedia.org/wikipedia/fr/thumb/5/58/Reddit_logo_new.svg/1200px-Reddit_logo_new.svg.png' style="width:80px; height:40px" )
                           
       
   
                        
                        
                                              
        div.row
            div.col
                div.bg-light.p-5
                    div.container
                        h1.text-center=post.name

        div.row
            div.col
                span.badge.rounded-pill.bg-primary=post.cat_name
                span.badge.rounded-pill.bg-secondary author
                span.badge.rounded-pill.bg-secondary 01/01/01
                p=post.content
            
                form(action="/commentaire" method="GET")
                            input(type="Submit" value="Ajouter un commentaire")
                form(action="/like/id" method="POST")
                            input(name= "like" type="button" onclick="https://upload.wikimedia.org/wikipedia/commons/thumb/2/23/Facebook_Like_button.svg/1200px-Facebook_Like_button.svg.png" value="Like")
                form(action="/dislike" method="GET")
                            input(name= "like" type="Submit" value="Dislike")
                            
                
                form(action="/post/" + post.id + "/edit" method="GET")
                            input(type="Submit" value="Editer")            