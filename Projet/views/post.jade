        div.row
            div.col
                div.bg-light.p-5
                    div.container
                        h1.text-center=post.name

        div.row
            div.col
                 .panel.panel-default
                    .panel-heading      
                     span.badge.rounded-pill.bg-primary=post.cat_name
                     span.badge.rounded-pill.bg-secondary author
                     span.badge.rounded-pill.bg-secondary 01/01/01
                     .panel-body
                     p=post.content
                      div.col-3
                            div.p-2
                                form(action="/commentaire" method="GET")
                                            input(type="Submit" value="Ajouter un commentaire")
                            div.p-2             
                                form(action="/post/" + post.id + "/edit" method="GET")
                                         input(type="Submit" value="Editer") 
                            p= 'nombre de like : ' + data.like  
                            div.p-2
                                form(action="/like/" +post.id method="POST")
                                            input(name= "like" type="image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/23/Facebook_Like_button.svg/1200px-Facebook_Like_button.svg.png" style="width:80px; height:60px" value="Like")
                            p= 'nombre de dislike :' + data.dislike  
                            div.p-2
                                form(action="/dislike/"+post.id method="GET")
                                            input(name= "dislike" type="image" src="https://proofmart.com/wp-content/uploads/2020/09/dislike-thumb-product.png" style="width:80px; height:60px" value="Dislike")
                            
                
                         